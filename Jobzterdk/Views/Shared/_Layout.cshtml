<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta charset="utf-8" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="msapplication-tap-highlight" content="no" />
    <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width" />
    <link href="~/Content/bootstrap-3.3.7-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/CSS/mainSheet.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <!--NAVBAR START-->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header navbarBG">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand hidden-xs" href="/Home/Index/">
                    <img class="img-responsive" src="~/Content/GFX/Logo.png" />
                </a>
                <a class="navbar-brand-JZ visible-xs" href="/Home/Index/">
                    <img class="img-responsive" src="~/Content/GFX/Logo.png" />
                </a>
            </div>
            <div class="collapse navbar-collapse cl-effect-1" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="home" href="/Home/Index/">
                            <i class="fa fa-home fa-2x"></i>
                        </a>
                    </li>
                    <li><a href="#">Info</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#myModal">Virksomheds Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!--NAVBAR SLUT-->
    <!--LOGIN POPUP-->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- MODAL LOGIN START-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="row">
                    <div class='col-md-3'></div>
                    <div class="col-md-6">
                        <div class="login-box well">
                            <form action="/Home/Login" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="username-email">Email</label>
                                    <input id="username-email" name="brugernavn" placeholder="Email" type="text" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="password">Adgangskode</label>
                                    <input id="password" name="adgangskode" placeholder="Adgangskode" type="text" class="form-control" />
                                </div>
                                <div class="text-center">
                                    <input class="text-left huskLoginPos" id="login-remember" type="checkbox" name="remember" value="1"> Husk mig
                                    <input class="tekst-right loginFont huskLoginPos" type="submit" value="login" />
                                    <br />
                                    <div class="findesIkke">@ViewBag.MSG</div>
                                </div>
                                <div class="text-center loginAlinks">
                                    <a href="/resetting/request" class="text-sm text-left">Glemt login?</a>
                                    <a href="/Home/OpretVirk/" class="text-sm text-right">Opret virksomhed</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class='col-md-3'></div>
                </div>
            </div>
            <!-- MODAL LOGIN SLUT-->
        </div>
    </div>
    <!--LOGIN POPUP SLUT-->
    @RenderBody()

    <script>
        if ('@ViewBag.MSG'.length > 0) {
            $('#myModal').modal('show');

        }
    </script>
</body>
</html>