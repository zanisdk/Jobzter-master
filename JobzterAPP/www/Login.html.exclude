    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="css/bootstrap.min.css" rel="stylesheet" />

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js"></script>
    <script src="js/LoginTjeck.js"></script>
    <script src="js/Main.js"></script>
    <link href="css/Main.min.css" rel="stylesheet" />
    <title>Jobzter</title>

    <script type="text/javascript">

        function Login() {

            var email = $("#Email").val();
            var adgangskode = $("#Adgangskode").val();

            $.ajax({
                type: 'GET',
                url: 'http://localhost:17821/api/App/Login/' + email + '/' + adgangskode,
                success: function (data) {
                    alert(email + " : " + adgangskode);
                    if (data.ID > 0) {
                        window.localStorage.setItem("user", data.ID);
                        window.localStorage.setItem("level", data.Level);
                        window.location.assign("Login.html");
                    } else {
                        $("#msg").html("<span class=\"alert\">Brugeren blev ikke fundet!!!</span>");
                    }

                },
                error: function(data) {
                    alert("Det duer ikke!");
                }
            });
        } 


        $(function () {

            if (window.localStorage.getItem("user") !== null) {
                $("#loginForm").hide();
                $("#logudForm").show();
            } else {
                $("#logudForm").hide();
                $("#loginForm").show();
            }

        });
    </script>
</head>

<body>


    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">

                <img src="GFX/JobLogo.png" class="img-responsive center Logo"/>

            </div>
        </div>
        <form onsubmit="return Login(), false;">
            <div id="loginForm" class="row">
                <div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 cont">
                    <span id="msg"></span>

                    <input id="Email" class="form-control input-style" type="text" placeholder="E-mail">
                    <br />
                    <input id="Adgangskode" class="form-control input-style" type="password" placeholder="Adgangskode">
                    <br />




                </div>
            </div>
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
                    <input class="button pull-left" type="submit" value="Glemt adgangskode" />
                    <input id="subBut" class="button pull-right" type="submit" value="Log ind" />
                </div>

            </div>
        </form>

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-offset-0 col-xs-12 col-sm-10 col-sm-offset-1">
                    <h6><span>Eller</span></h6>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-offset-1 col-xs-10 col-sm-10 col-sm-offset-1">
                    <img src="GFX/loginwithF.png" class="img-responsive center FBlogin" />
                </div>
            </div>
            <div class="row">

                    <input class="button center-block" type="submit" value="Tilmeld dig nu" />

            </div>
        </div>

    </div>
    <div id="logudForm" class="row">
        <div class="col-sm-12  cont text-center">

            <button class="button" type="submit" onclick="navigate('Logud',0);">Logud</button>

        </div>
    </div>



    <!--<script type="text/javascript" src="cordova.js"></script>-->
    <script type="text/javascript" src="js/index.js"></script>
    <script type="text/javascript">
        app.initialize();
    </script>
</body>







</html>